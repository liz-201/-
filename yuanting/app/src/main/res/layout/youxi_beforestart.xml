<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:id="@+id/youxi_beforePlay_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_centerInParent="true"
        android:text="开始游戏！"
        android:background="#DEDEDE"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最高分："
        android:layout_below="@id/youxi_beforePlay_play"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:id="@+id/youxi_beforePlay_topscore"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/youxi_choose_bgmusic"
        android:layout_below="@id/youxi_beforePlay_topscore"
        />
</RelativeLayout>